#:kivy 1.9.0

<LearnScreen>:

	title: 'InputDialog'

	RelativeLayout:
		orientation: 'vertical'
		pos: self.pos
		size: root.size

		Label:
			id: question_label
			text: app.get_new_formatted_question()
			font_size: '30sp'
			size: self.texture_size

        Label:
            id: indicator
            text: ''
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            size: self.texture_size
            centered: True

		TextInput:
			id: input
			hint_text: 'Enter your answer here'
			pos_hint: {'center_x': 0.5, 'center_y': 0.7}
			size_hint: 0.6, 0.06
			focus: True
			on_text_validate: app.process()
			multiline: False
