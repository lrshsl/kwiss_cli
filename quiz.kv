#:kivy 1.9.0

<LearnScreen>:

	title: 'InputDialog'

	RelativeLayout:
		orientation: 'vertical'
		pos: self.pos
		size: root.size

		Label:
			id: question_label
			text: root.question
			font_size: '30sp'
			size: self.texture_size

		Label:
			id: indicator_label
			text: ''
			pos_hint: {'center_x': 0.5, 'center_y': 0.9}
			font_size: '20sp'
			size: self.texture_size

		Label:
			id: hint_label
			text: root.hint
			color: (1, 1, 1, .5)
			pos_hint: {'center_x': 0.5, 'center_y': 0.84}
			size: self.texture_size

		TextInput:
			id: input
			hint_text: 'Enter your answer here'
			pos_hint: {'center_x': 0.5, 'center_y': 0.7}
			size_hint: 0.6, 0.06
			focus: True
			on_text_validate: app.process()
			multiline: False
